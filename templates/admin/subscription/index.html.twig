{% extends 'base.html.twig' %}

{% block title %}Subscription index{% endblock %}

{% block content %}
    <h1>Subscription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Duration</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscription in subscriptions %}
            <tr>
                <td>{{ subscription.id }}</td>
                <td>{{ subscription.name }}</td>
                <td>{{ subscription.price }}</td>
                <td>{{ subscription.duration }}</td>
                <td>{{ subscription.description }}</td>
                <td>
                    <a href="{{ path('app_admin_subscription_show', {'id': subscription.id}) }}">show</a>
                    <a href="{{ path('app_admin_subscription_edit', {'id': subscription.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_subscription_new') }}">Create new</a>
{% endblock %}
